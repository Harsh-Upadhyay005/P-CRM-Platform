# ─── Server ───────────────────────────────────────────────────────────────────
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# ─── Database ─────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE_NAME

# ─── JWT ──────────────────────────────────────────────────────────────────────
JWT_ACCESS_SECRET=your_access_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# ─── Bcrypt ───────────────────────────────────────────────────────────────────
BCRYPT_SALT_ROUNDS=10

# ─── Email Expiry ─────────────────────────────────────────────────────────────
EMAIL_VERIFICATION_EXPIRY_MINUTES=60
RESET_PASSWORD_EXPIRY_MINUTES=15

# ─── Brevo (Email Service) ────────────────────────────────────────────────────
BREVO_API_KEY=your_brevo_api_key
BREVO_SENDER_EMAIL=noreply@yourdomain.com
BREVO_SENDER_NAME=P-CRM

# ─── Upstash Redis ────────────────────────────────────────────────────────────
UPSTASH_REDIS_REST_URL=https://your-upstash-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# ─── Supabase Storage ─────────────────────────────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_STORAGE_BUCKET=complaint-attachments

# ─── Seed Credentials (used only by: node prisma/seed.js) ─────────────────────
# These are NOT used at runtime — only when seeding the database.
# Never commit your real credentials here. Put them only in your local .env file.
SEED_SUPER_ADMIN_EMAIL=your_email@example.com
SEED_SUPER_ADMIN_PASSWORD=YourStrongPassword123
